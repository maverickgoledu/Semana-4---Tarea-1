@model IEnumerable<Preguntas.Models.Pregunta> // Define el modelo que se utilizará en la vista, en este caso una colección de objetos Pregunta

@{
    ViewData["Title"] = "Lista de Preguntas"; // Establece el título de la página
}

<h1>Lista de Preguntas</h1> <!-- Encabezado principal de la página -->

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Pregunta</a> <!-- Enlace para crear una nueva pregunta -->
</p>
<table class="table">
    <!-- Inicio de la tabla con clase CSS 'table' -->
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th> <!-- Encabezado de columna para el Id -->
            <th>@Html.DisplayNameFor(model => model.TextoPregunta)</th> <!-- Encabezado de columna para el texto de la pregunta -->
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th> <!-- Encabezado de columna para la fecha de creación -->
            <th>@Html.DisplayNameFor(model => model.Activa)</th> <!-- Encabezado de columna para el estado activo -->
            <th></th> <!-- Columna vacía para posibles acciones -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) // Itera sobre cada elemento en el modelo
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td> <!-- Muestra el Id de la pregunta -->
                <td>@Html.DisplayFor(modelItem => item.TextoPregunta)</td> <!-- Muestra el texto de la pregunta -->
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td> <!-- Muestra la fecha de creación de la pregunta -->
                <td>@Html.DisplayFor(modelItem => item.Activa)</td> <!-- Muestra si la pregunta está activa -->
            </tr>
        }
    </tbody>
</table> <!-- Fin de la tabla -->
